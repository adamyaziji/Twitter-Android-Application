<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/backgroundblue">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/hintaddusername"
        android:id="@+id/addMemberET"
        android:layout_below="@+id/groupName"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:id="@+id/addmemberIV"
        android:layout_marginRight="10dp"
        android:layout_marginTop="43dp"
        android:src="@drawable/addmember_button"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:id="@+id/addgroupIV"
        android:src="@drawable/addgroup_button"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/hintgivegroupname"
        android:id="@+id/groupName"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/usernameListView"
        android:layout_below="@+id/addMemberET"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/textgroupusers"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView"
        android:layout_below="@+id/addmemberIV"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"/>

</RelativeLayout>
